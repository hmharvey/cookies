<h1> New Cookie Batch </h1>
<%= form_for @cookie_batch do | form | %>
	<%= form.label :number_of_cookies %>
	<%= form.text_field :number_of_cookies %>
	<br> 
	<%= form.label :sender_id %>
	<%= form.collection_select :sender_id, User.all, :id, :name %>	
	<br> 
	<%= form.label :recipient_id %>
	<%= form.collection_select :recipient_id, User.all, :id, :name %>	
	<br>
	<%= form.submit "save cookie batch" %> 
<% end %>

<%= link_to "Back", cookie_batches_path %>